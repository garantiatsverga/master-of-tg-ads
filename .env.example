# Пример файла конфигурации для переменных окружения

# Настройки базы данных
DB_HOST=localhost
DB_PORT=5432
DB_NAME=master_of_tg_ads
DB_USER=postgres
DB_PASSWORD=postgres

# Настройки S3 для хранения изображений
S3_BUCKET_NAME=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=your-region

# Настройки API для генерации изображений
IMAGE_API_KEY=your-image-api-key
IMAGE_API_URL=https://api.image-generator.com/v1/generate

# Настройки API для генерации текста
TEXT_API_KEY=your-text-api-key
TEXT_API_URL=https://api.text-generator.com/v1/generate

# Настройки сервера
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log